<div class="container mt-5">
  <h1 class="mb-4">Nos freelances disponibles</h1>

  <div class="row">
    <% @profiles.each do |profile| %>
      <div class="col-md-4">
        <div class="card shadow-sm mb-4">
          <!-- Avatar -->
          </div>

          <div class="card-body text-center">
            <!-- Nom & Titre -->
            <h5 class="fw-bold"><%= profile.title %></h5>
            <p class="text-muted"><%= profile.address %></p>

            <!-- Compétences -->
            <div class="mb-3">
              <% profile.skills.first(5).each do |skill| %>
                <span class="badge bg-primary me-1"><%= skill.job_title %></span>
              <% end %>
            </div>

            <!-- Display Tech Skills -->
            <div class="mb-3">
              <% profile.tech_skills.first(5).each do |skill| %>
                <span class="badge bg-primary me-1"><%= skill %></span>
              <% end %>
            </div>

            <!-- Taux horaire -->
            <p class="fw-bold">
              <i class="bi bi-cash-coin"></i> <%= number_to_currency(profile.hourly_rate, unit: "Rs", format: "%n %u") %> / heure
            </p>

            <!-- Disponibilité -->
            <% case profile.availability_status %>
              <% when "available" %>
                <span class="badge bg-success">Disponible</span>
              <% when "busy" %>
                <span class="badge bg-warning">Occupé</span>
              <% else %>
                <span class="badge bg-danger">Non disponible</span>
            <% end %>

            <!-- Bouton voir le profil -->
            <div class="mt-3">
              <%= link_to "Voir le profil", profile_path(profile), class: "btn btn-outline-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
