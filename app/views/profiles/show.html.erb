<div class="container mt-5">
  <div class="row">
    <!-- Colonne gauche (photo + infos de base) -->
    <div class="col-md-4 text-center">
      <div class="profile-picture mb-3">
      </div>
      <h3 class="fw-bold"><%= @profile.title %></h3>
      <p class="text-muted"><%= @profile.years_of_experience %> ans d'expérience</p>

      <p class="text-muted"><i class="bi bi-geo-alt"></i> <%= @profile.address %></p>
      <p class="text-muted"><i class="bi bi-translate"></i> Langues : <%= @profile.language %></p>
    </div>

    <!-- Colonne droite (bio + compétences + dispo) -->
    <div class="col-md-8">
      <h4 class="fw-bold">À propos</h4>
      <p><%= @profile.bio %></p>

      <h4 class="fw-bold mt-4">Compétences</h4>
      <% @profile.skills.split(',').each do |skill| %>
        <span class="badge bg-primary me-1"><%= skill.strip %></span>
      <% end %>

      <h4 class="fw-bold mt-4">Disponibilité</h4>
      <% case @profile.availability_status %>
        <% when "available" %>
          <span class="badge bg-success">Disponible</span>
        <% when "busy" %>
          <span class="badge bg-warning">Occupé</span>
        <% else %>
          <span class="badge bg-danger">Non disponible</span>
      <% end %>

      <h4 class="fw-bold mt-4">Taux horaire</h4>
      <p><strong><%= number_to_currency(@profile.hourly_rate, unit: "€", format: "%n %u") %> / heure</strong></p>

      <% if @profile.portfolio_url.present? %>
        <h4 class="fw-bold mt-4">Portfolio</h4>
        <p><a href="<%= @profile.portfolio_url %>" class="btn btn-outline-primary" target="_blank">
          Voir le portfolio <i class="bi bi-box-arrow-up-right"></i>
        </a></p>
      <% end %>

      <!-- Bouton pour contacter -->
      <a href="#" class="btn btn-primary mt-3">
        Contacter <i class="bi bi-envelope-fill"></i>
      </a>
    </div>
  </div>
</div>
