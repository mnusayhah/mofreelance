<%# Login page with improved design %>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm border-0 rounded-4 bg-white">
        <div class="card-body p-4 p-md-5">
          <div class="text-center mb-4">
            <h2 class="fw-bold">Sign In</h2>
            <p class="text-muted">Welcome back to MoFreelance</p>
          </div>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-floating mb-3">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control rounded-3" },
                          label_html: { class: "form-label" },
                          wrapper: false %>
            </div>

            <div class="form-floating mb-4">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "form-control rounded-3" },
                          label_html: { class: "form-label" },
                          wrapper: false %>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
              <div class="form-check">
                <%= f.input :remember_me, as: :boolean, wrapper: false, label_html: { class: "form-check-label text-muted" }, input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
              </div>

              <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-primary fw-semibold text-decoration-none small" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.button :submit, "Sign In", class: "btn-pill-custom-red py-3" %>
            </div>
          <% end %>

          <div class="mt-4 pt-3 border-top text-center">
            <p class="mb-0">Don't have an account? <%= link_to "Create an account", new_registration_path(resource_name), class: "text-primary fw-semibold text-decoration-none" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
