<!-- Hero Section avec barre de recherche -->
<div class="hero-section position-relative">
  <!-- L'image de fond est gérée par CSS -->
  <div class="hero-overlay"></div>

  <div class="container py-5">
    <div class="hero-content text-center py-5">
      <h1 class="display-4 fw-bold mb-4 text-white">Connect with Top Freelance Talent</h1>
      <p class="lead mb-5 text-white">Your workspace to find and collaborate with skilled freelancers worldwide.</p>

      <!-- Barre de recherche -->
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="search-bar">
            <%= form_with url: freelancer_profiles_path, method: :get, class: "d-flex w-100 align-items-center" do %>
              <div class="search-input-container">
                <i class="fas fa-search search-icon"></i>
                <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search skills, expertise..." %>
              </div>
              <%= button_tag "Find a Freelancer", type: "submit", class: "btn-primary-custom" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

