<%= turbo_frame_tag "projects_frame" do %>
  <%= simple_form_for [:enterprise, @project], data: { turbo_frame: "projects_frame" } do |f| %>
    <% if @project.errors.any? %>
      <div class="alert alert-danger">
        <h4>Form contains errors:</h4>
        <ul>
          <% @project.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.input :title, label: "Project Title", input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :description, label: "Project Description", as: :text, input_html: { class: 'form-control' } %>
    </div>

  <div class="form-group">
    <%= f.input :logo, as: :file, label: "Company Logo" %>
  </div>


  //<div class="form-group">
    //<%= f.input :budget, label: "Project Budget", as: :decimal %>
  //</div>

    <div class="form-group">
      <%= f.input :budget, label: "Project Budget", as: :decimal, input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :required_skills, label: "Required Skills", as: :string, input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :visibility, label: "Visibility", collection: ['Public', 'Private'], include_blank: false, input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :start_date, label: "Start Date", as: :date, input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :end_date, label: "End Date", as: :date, input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Create Project", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>
</turbo_frame_tag>
