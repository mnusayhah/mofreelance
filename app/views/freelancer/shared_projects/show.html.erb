<turbo-frame id="projects_frame">
  <% if @shared_project&.project.present? %>
    <div class="card shadow-lg p-4">
      <h1 class="text-primary mb-3">ðŸ“Œ Project: <%= @shared_project.project.title %></h1>

      <div class="mb-3">
        <h4 class="text-secondary"><strong>Project Details</strong></h4>
        <p><strong>Name:</strong> <%= @shared_project.project.title %></p>
        <p><strong>Description:</strong> <%= @shared_project.project.description %></p>
        <p><strong>Budget:</strong> <span class="badge bg-success">$<%= @shared_project.project.budget %></span></p>
        <p><strong>Status:</strong> <span class="badge bg-info"><%= @shared_project.status %></span></p>
      </div>

      <div class="mb-3">
        <h4 class="text-secondary"><strong>Timeline</strong></h4>
        <p><strong>Start Date:</strong> <%= @shared_project.project.start_date.strftime('%B %d, %Y') %></p>
        <p><strong>Due Date:</strong> <%= @shared_project.project.end_date.strftime('%B %d, %Y') %></p>
      </div>

      <div class="mb-3">
        <h4 class="text-secondary"><strong>Skills Required</strong></h4>
        <p class="text-muted"><%= @shared_project.project.required_skills %></p>
      </div>

      <div class="mb-3">
        <h4 class="text-secondary"><strong>Collaborators</strong></h4>
        <p><strong>Enterprise:</strong> <%= @shared_project.project.user.company %> </p>
        <p><strong>Freelancer:</strong> <%= @shared_project.freelancer.first_name %> </p>
      </div>

      <% if @shared_project.status == "pending" %>
        <div class="d-flex gap-2">
          <%= button_to "Accept", accept_freelancer_shared_project_path(@shared_project), method: :post, class: "btn btn-success", data: { turbo_confirm: "Are you sure you want to accept this project?" } %>
          <%= button_to "Decline", decline_freelancer_shared_project_path(@shared_project), method: :post, class: "btn btn-danger", data: { turbo_confirm: "Are you sure you want to decline this project?" } %>
        </div>
      <% end %>

      <%= link_to 'Back to My Projects', freelancer_shared_projects_path, class: 'btn btn-secondary mt-3' %>
    </div>
  <% else %>
    <div class="alert alert-danger text-center">
      ðŸš¨ You do not have any project yet.
    </div>
    <%= link_to 'Back to My Projects', freelancer_shared_projects_path, class: 'btn btn-secondary mt-3' %>
  <% end %>
</turbo-frame>
