<div class="dashboard-container">
  <!-- Sidebar -->
  <div class="sidebar" style="width: 250px; margin-right: 20px;">
    <ul>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Projects
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to "Ongoing Projects", freelancer_shared_projects_path(status: 1), class: "dropdown-item", data: { turbo_frame: "projects_frame" } %></li>
        <li><%= link_to "Pending Projects", freelancer_shared_projects_path(status: 0), class: "dropdown-item", data: { turbo_frame: "projects_frame" } %></li>
        <li><%= link_to "Completed Projects", freelancer_shared_projects_path(status: 4), class: "dropdown-item", data: { turbo_frame: "projects_frame" } %></li>
      </ul>
    </div>

    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Messages
      </button>
    </div>

    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Profile
      </button>
        <ul class="dropdown-menu">
          <li><%= link_to "Edit My Profile" %></li>
          <li><%= link_to "Create My Profile" %></li>
        </ul>
    </div>
  </div>


  <!-- Main Content -->
  <main class="dashboard-content">
      <div id="projects-container">
        <turbo-frame id="projects_frame">
        <h2> Projects</h2>
          <%= render partial: "projects_list", locals: { projects: @ongoing_projects } %>
        </turbo-frame>
      </div>
  </main>
</div>
